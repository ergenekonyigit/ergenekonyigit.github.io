{
  "private": true,
  "scripts": {
    "lint": "markdownlint src/**/*.md",
    "eleventy": "eleventy",
    "html": "html-minifier --config-file=.html-minifier.json --input-dir=docs --output-dir=docs --file-ext=html",
    "css": "postcss src/css/main.css --output docs/css/main.css",
    "js": "mkdir -p docs/js && minify --mangle.topLevel src/js/main.mjs --outFile docs/js/main.mjs && minify --mangle.topLevel src/js/legacy.js --outFile docs/js/legacy.js",
    "json": "json-minify src/.webmanifest > docs/.webmanifest",
    "sw": "workbox injectManifest workbox-config.js && minify docs/sw.js --outFile docs/sw.js",
    "cpx": "cp src/CNAME docs",
    "clean": "rm -rf -- docs",
    "build": "npm run clean && npm run css && npm run js && npm run json && npm run eleventy && npm run sw && npm run html && npm run cpx",
    "watch": "npm run build && npx eleventy --watch",
    "debug": "DEBUG=* npx eleventy",
    "start": "superstatic --port=9001",
    "deploy": "firebase deploy",
    "ci": "npm run lint && npm run build"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.6.0",
    "@11ty/eleventy-plugin-rss": "^1.0.3",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.0",
    "autoprefixer": "^9.4.2",
    "babel-minify": "^0.5.0",
    "cssnano": "^4.1.7",
    "firebase-tools": "^6.1.2",
    "he": "^1.2.0",
    "html-minifier": "^3.5.21",
    "json-minify": "^1.0.0",
    "luxon": "^1.8.2",
    "markdown-it": "^8.4.2",
    "markdown-it-anchor": "^5.0.2",
    "markdown-it-attrs": "^2.3.2",
    "markdown-it-footnote": "^3.0.1",
    "markdownlint-cli": "^0.13.0",
    "postcss-cli": "^6.0.1",
    "postcss-custom-properties": "^8.0.9",
    "superstatic": "^6.0.4",
    "workbox-cli": "^4.0.0-alpha.0"
  }
}
